@using BlogApplication.WebFramework.HtmlExtensions
@model BlogApplication.Framework.Application.Web.HttpError
@{
    ViewBag.Title = Html.GetWord("Oops.");
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <p style="font-size: 20em; color: #a0a0a0; text-align: center">@Model.ErrorCode</p>
            <p style="width: 50%; margin-left: 25%; text-align: center; font-size: 1.5em;">@Model.ErrorMessage</p>
        </div>
        <div class="col-lg-6 col-lg-offset-3" style="margin-top: 50px">
            <p style="width: 50%; margin-left: 25%; text-align: center; font-size: 1em;">@Html.GetWord("You Can Use The Search")</p>
            <script>
                (function() {
                    var cx = '012898947308653837776:578-pxhkgy4';
                    var gcse = document.createElement('script');
                    gcse.type = 'text/javascript';
                    gcse.async = true;
                    gcse.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') +
                        '//cse.google.com/cse.js?cx=' + cx;
                    var s = document.getElementsByTagName('script')[0];
                    s.parentNode.insertBefore(gcse, s);
                })();
            </script>
            <gcse:search></gcse:search>
        </div>
    </div>
</div>

