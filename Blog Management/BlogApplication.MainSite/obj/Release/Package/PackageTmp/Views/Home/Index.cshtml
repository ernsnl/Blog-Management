@using BlogApplication.Data.GlobalTypes
@using BlogApplication.WebFramework.HtmlExtensions

@{
    ViewBag.Title = Html.GetSEOTitle(DomainLocationSEO.HomePage);
    ViewBag.Description = Html.GetSEODecsription(DomainLocationSEO.HomePage);
    ViewBag.Keywords = Html.GetSEOKeywords(DomainLocationSEO.HomePage);
}

@Html.Action("Slider","Home")


<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <div class="col-xs-12">
                <div class="col-lg-12">
                    <div class="col-md-offset-2 col-xs-12 col-md-8 emailList">
                        <div class="col-xs-12 text-center">
                            <span class="emailListMessage">@Html.GetWord("Subscribe To Newsletter by Entering Your Email")</span>
                        </div>
                        <div class="col-xs-12">
                            <input type="text" class="emailListInput" id="subscriberEmail" name="subscriberEmail" placeholder="example@("@example.com")"/>
                        </div>
                        <div class="col-xs-12 text-center">
                            <a href="javascript:void(0)" class="emailListButton text-center btn btn-default btn-md">@Html.GetWord("Subscribe")</a>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-sm-12 ">
                <div class="col-lg-3">
                    <div class="col-lg-12 mainPage category">
                        @Html.Action("Category", "Home")
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="col-lg-12 mainPage tag">
                        @Html.Action("Tag", "Home")
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="col-lg-12 mainPage" style="overflow-y:hidden">
                        @Html.Action("Advertise", "Home")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>
        $(".category").perfectScrollbar();
        $(".tag").perfectScrollbar();
    </script>

}