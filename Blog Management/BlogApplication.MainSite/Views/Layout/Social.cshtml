@using BlogApplication.WebFramework.HtmlExtensions
@model List<BlogApplication.Data.MainSystem.DomainSocial>
    
@{
    var counter = Model.Count > 4 ? 4 : Model.Count;

}


<div class="col-xs-12">
    <span class="footerLabelHeader">@Html.GetWord("Social")</span>
</div>

@if (Model.Count > 0)
{
    <div class="col-xs-6">
        <div class="socialLinks">
            @if (Model.Count > 0)
            {
                for (int i = 0; i < counter; i++)
                {
                    <a target="blank" href="@Html.InsertHttpToLink(Model[i].SocialMediaUrl)">@Html.SocialIcon((byte)Model[i].SocialMediaType)  @Html.GetWord(Model[i].SocialMediaPitch)</a>
                }
            }
        </div>
    </div>
    <div class="col-xs-6">
        <ul class="siteMap">
            @if (Model.Count > 0)
            {
                for (int i = 4; i < Model.Count; i++)
                {
                    <a target="blank" href="@Html.InsertHttpToLink(Model[i].SocialMediaUrl)">@Html.SocialIcon((byte)Model[i].SocialMediaType)  @Html.GetWord(Model[i].SocialMediaPitch)</a>
                }
            }
        </ul>
    </div>
}