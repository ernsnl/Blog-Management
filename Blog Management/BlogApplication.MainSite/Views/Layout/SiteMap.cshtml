@using BlogApplication.WebFramework.HtmlExtensions
@model Newtonsoft.Json.Linq.JObject

@{
    var counter = Model.Count > 4 ? 4 : Model.Count;
    
}


<div class="col-xs-12">
    <span class="footerLabelHeader">@Html.GetWord("SiteMap")</span>
</div>
<div class="col-xs-6">
    <ul class="siteMap">
        <li><a href="@Url.Action("Index", "Home", new {lg = Html.GetLanguageShort()})">@Html.GetWord("Home")</a></li>
        <li><a href="@Url.RouteUrl("News", new {lg = Html.GetLanguageShort()})">@Html.GetWord("News")</a></li>
        @if (Model.Count > 0)
        {
            for (int i = 0; i < counter; i++)
            {
                @Html.PanelEditorLink(Model["" + i.ToString() + ""]["name"].ToString(),
                    Convert.ToInt32(Model["" + i + ""]["type"]),
                    Convert.ToInt64(Model["" + i + ""]["pageID"]))
            }
        }
    </ul>
</div>
<div class="col-xs-6">
    <ul class="siteMap">
        @if (Model.Count > 0)
        {
            for (int i = 4; i < Model.Count; i++)
            {
                @Html.PanelEditorLink(Model["" + i.ToString() + ""]["name"].ToString(),
                    Convert.ToInt32(Model["" + i + ""]["type"]),
                    Convert.ToInt64(Model["" + i + ""]["pageID"]))
            }
        }
    </ul>
</div>