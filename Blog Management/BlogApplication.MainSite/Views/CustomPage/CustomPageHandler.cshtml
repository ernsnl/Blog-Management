
@using BlogApplication.WebFramework.HtmlExtensions
@model BlogApplication.Data.Blog.CustomPageContent

@{
    ViewBag.Title = Html.GetSEOTitle(Model);
    ViewBag.Description = Html.GetSEODecsription(Model);
    ViewBag.Keywords = Html.GetSEOKeywords(Model);
}

<link rel="stylesheet" href="~/Files/Plugins/frola/css/froala_editor.min.css" />
<link rel="stylesheet" href="~/Files/Plugins/frola/css/froala_style.min.css" />

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong>
                    @if (Model.CustomPageTranslations.Where(op => op.LanguageID == Convert.ToInt64(this.Session["CurrentLanguageID"])).Any())
                    {
                        @Html.Raw(Model.CustomPageTranslations.Where(op => op.LanguageID == Convert.ToInt64(this.Session["CurrentLanguageID"])).FirstOrDefault().TranslationTitle)
                    }
                    else
                    {
                        @Html.Raw(Model.Title)
                    }
                </strong>
            </h2>
            <hr>
        </div>

        <div class="col-lg-12">
            <div class="col-lg-12 editor fr-view fr-preview">
                @if (Model.CustomPageTranslations.Where(op => op.LanguageID == Convert.ToInt64(this.Session["CurrentLanguageID"])).Any())
                {
                    @Html.Raw(Model.CustomPageTranslations.Where(op => op.LanguageID == Convert.ToInt64(this.Session["CurrentLanguageID"])).FirstOrDefault().TranslationTextDecoded)
                }
                else
                {
                    @Html.Raw(Model.CustomPageDecoded)
                }

            </div>
            <hr>
        </div>

    </div>
</div>
